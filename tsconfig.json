{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./lib",
    "sourceMap": true,
    "target": "es6",
    "pretty": true
  },
  "include": [
    "src",
  ],
  "exclude": ["node_modules", "**/__tests__/*"]
}
